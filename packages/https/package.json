{
  "name": "@plant/https",
  "version": "0.2.0-alpha",
  "description": "Plant node.js HTTP module's server handler",
  "main": "index.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "test": "NODE_TLS_REJECT_UNAUTHORIZED=0 mocha test.spec.js",
    "jsdoc": "jsdoc --configure .jsdoc.json --verbose",
    "docs": "npm run jsdoc && rm -rf docs && mv tmp/docs/*/*/* docs && rm -rf tmp/docs",
    "ssl-cert": "openssl req -newkey rsa:2048 -nodes -keyout var/key.pem -x509 -days 365 -out var/cert.pem"
  },
  "repository": {
    "type": "git",
    "url": "github.com/rumkin/plant"
  },
  "keywords": [
    "plant",
    "http",
    "native-http"
  ],
  "author": "Rumkin <dev@rumk.in> (https://rumk.in/)",
  "license": "MIT",
  "dependencies": {
    "@plant/http-adapter": "0.2.0"
  },
  "devDependencies": {
    "@plant/plant": "^2.0.0-beta",
    "jsdoc": "^3.5.5",
    "minami": "^1.2.3",
    "mocha": "^5.2.0",
    "node-fetch": "^2.2.0",
    "should": "^13.2.2"
  }
}
