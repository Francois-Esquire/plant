{
  "name": "@plant/router",
  "version": "1.0.0-rc4",
  "description": "Router for plant server",
  "main": "src/index.js",
  "dependencies": {
    "@plant/flow": "^1.0.0",
    "lodash.isplainobject": "^4.0.6",
    "lodash.isstring": "^4.0.1",
    "path-to-regexp": "^1.7.0"
  },
  "devDependencies": {
    "@plant/plant": "^2.0.0-rc8",
    "allow-publish-tag": "^1.0.1",
    "babel-minify": "^0.5.0",
    "mocha": "^6.1.4",
    "should": "^13.2.3"
  },
  "scripts": {
    "build": "npm run clean && mkdir dist && npm run compile && npm run minify",
    "clean": "rm -rf dist",
    "compile": "browserify -s PlantRouter src/index.js > dist/router.js",
    "minify": "babel-minify dist/router.js -o dist/router.min.js",
    "prepublishOnly": "allow-publish-tag next && npm test && npm run build",
    "test": "mocha test/*.spec.js"
  }
}
