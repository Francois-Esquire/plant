{
  "name": "@plant/plant",
  "version": "2.0.0-rc11",
  "description": "WebAPI charged HTTP2-ready web server for node.js and browser",
  "main": "src/index.js",
  "engines": {
    "node": ">= 11"
  },
  "scripts": {
    "start": "node .",
    "test": "mocha test/index.js",
    "lint": "npm run lint:js src/**.js",
    "lint:js": "eslint",
    "prepublishOnly": "allow-publish-tag next && npm run lint && npm run build && npm run docs",
    "jsdoc": "jsdoc --configure .jsdoc.json --verbose",
    "docs": "npm run jsdoc && rm -rf docs && mv ./tmp/docs/@plant/plant/* docs && rm -rf tmp/docs",
    "clean": "rm -rf dist",
    "dist": "mkdir dist",
    "compile": "browserify -s Plant src/server.js > dist/plant.js",
    "minify": "babel-minify dist/plant.js -o dist/plant.min.js",
    "build": "npm run clean && npm run dist && npm run compile && npm run minify",
    "next": "npm publish --tag next"
  },
  "license": "MIT",
  "devDependencies": {
    "allow-publish-tag": "^1.0.0",
    "babel-minify": "^0.5.0",
    "browserify": "^16.2.3",
    "eslint": "^5.16.0",
    "jsdoc": "^3.5.5",
    "minami": "^1.2.3",
    "mocha": "^6.0.2",
    "node-fetch": "^2.0.0",
    "should": "^11.2.1"
  },
  "dependencies": {
    "@plant/flow": "^1.0.0",
    "cookie": "^0.3.1",
    "escape-string-regexp": "^2.0.0",
    "eventemitter3": "^3.1.0",
    "lodash.escaperegexp": "^4.1.2",
    "lodash.isobject": "^3.0.2",
    "lodash.isplainobject": "^4.0.6",
    "lodash.isstring": "^4.0.1",
    "statuses": "^1.5.0"
  },
  "directories": {
    "test": "test",
    "docs": "docs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rumkin/plant.git"
  },
  "keywords": [
    "server",
    "web",
    "http",
    "https",
    "api"
  ],
  "author": "rumkin",
  "homepage": "https://github.com/rumkin/plant",
  "bugs": "https://github.com/rumkin/plant/issues"
}
